<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background= "#e0fcf3"
        android:layout_gravity="center"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background= "#e0fcf3"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp">

        <hu.ait.minesweeper.views.MineView
                android:id="@+id/mineView"
                android:layout_width="250dp"
                android:layout_height="250dp"/>

    </LinearLayout>
    <ToggleButton
            android:layout_width="fill_parent"
            android:layout_marginHorizontal="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/flagToggle"
            android:layout_marginBottom="40dp"

            android:textOn="@string/flag_field"
            android:textOff="@string/try_field"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Switch
                android:id="@+id/easySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="75dp"
                android:text="Easy"/>

        <Switch
                android:id="@+id/mediumSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="75dp"
                android:text="Medium"/>
        <Switch
                android:id="@+id/expertSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expert"/>

    </LinearLayout>
    <Button
            android:id="@+id/startBtn"
            android:text="New Game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop= "40dp"
            android:layout_marginHorizontal="140dp"
            />

</LinearLayout>